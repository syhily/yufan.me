---
import { blurStyle } from '@/helpers/images/blur';
import type { Image } from '@/helpers/images/types';

interface Props {
  src: Image;
  alt?: string;
}

const { src, alt } = Astro.props;
---

<img src={src.src} {alt} loading="lazy" width={src.width} height={src.height} style={blurStyle(src)} />
