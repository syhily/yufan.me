---
import { song } from '@/components/netease/resolver';
import 'aplayer/dist/APlayer.min.css';

interface Props {
  id: string;
}

const { id } = Astro.props;

const { name, artist, url, pic } = await song(id);
---

<div class="aplayer" data-name={name} data-artist={artist} data-url={url} data-cover={pic}>音乐正在加载中 ...</div>
