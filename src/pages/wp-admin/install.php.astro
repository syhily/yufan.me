---
import { actions } from 'astro:actions'
import AdminLayout from '@/layouts/AdminLayout.astro'
---

<AdminLayout title="注册管理员账号">
  <form method="post" action={actions.auth.signUpAdmin} id="installForm">
    <div class="flex-1">
      <div class="flex flex-col gap-3 mb-5 px-5">
        <input class="form-control mb-2" placeholder="昵称" name="name" type="text" required="required" />
        <input class="form-control mb-2" placeholder="邮箱" name="email" type="email" required="required" />
        <input
          class="form-control mb-2"
          placeholder="密码"
          name="password"
          type="password"
          required="required"
          minlength="10"
        />
      </div>
      <div class="form-submit text-center">
        <input name="submit" type="submit" id="submit" class="btn btn-primary w-4/12" value="注册管理员" />
      </div>
    </div>
  </form>
</AdminLayout>

<script>
  import '@/assets/scripts/admin/install'
</script>
