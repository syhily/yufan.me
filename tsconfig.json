{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "module": "ESNext",
    "paths": {
      "@/options": ["options.ts"],
      "@/images/*": ["images/*"],
      "@/*": ["src/*"]
    },
    "types": ["vite-plugin-arraybuffer/types", "vite-plugin-font/src/font"],
    "strict": true,
    "strictNullChecks": true
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
