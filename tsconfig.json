{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "paths": {
      "*": ["./*"],
      "@/*": ["./src/*"],
      "~/*": ["./public/*"]
    },
    "types": ["vite-plugin-binary/types"],
    "strict": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
