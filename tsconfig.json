{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "module": "ESNext",
    "paths": {
      "@/options": ["./options.ts"],
      "@/*": ["src/*"]
    },
    "strict": true,
    "strictNullChecks": true
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
