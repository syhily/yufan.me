root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,mdx}]
indent_size = tab
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,css,less,sass,scss}]
indent_style = space
indent_size = 2

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab

[Makefile]
indent_size = tab